<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div style="text-align: right; clear: left;" class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div style="text-align: right; clear: left;"class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
        <a class="nav-item nav-link" href="/register">Register</a> <!-- updated header to include register tab-->
        <% if (!username) { %>
        <form class="form-inline my-1" method="POST" action="/login">
          <div>
            <input type="text" readonly class="form-control-plaintext" value="<%= username %>">
            <input class="form-control mr-2" type="text" name="username" placeholder="Username" style="width: 200px">
            <button type="submit" class="btn btn-outline-dark">Login</button>
          </div> 
        </form>
        <% } else { %>
          <form class="form-inline my-1" method="POST" action="/logout">
            <div>
               <%= username %>
               <button type="submit" class="btn btn-outline-dark">Logout</button>
            </div> <!-- before logout logic implemented - logout by deleting cookies -->
          </form>
          <% } %>
      </div>
    </div>
  </nav>
</header>